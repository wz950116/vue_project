{
    "extends": [
        "standard",
        "vue"
    ],
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-var": 1,
        "no-multiple-empty-lines": [
            2, 
            {
                "max": 1
            }
        ],
        'semi': [
            "error",
            "always"
        ],
        'quotes': ['error', 'double'],
        "indent": [
            "error",
            4
        ],
        "camelcase": 0,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "always",
                "asyncArrow": "always"
            }
        ],
        "no-unused-vars": 1,
        "key-spacing": 1,
        "no-alert": 2,
        "no-console": 1,
        "no-mixed-spaces-and-tabs": 0,
        "no-tabs": 0,
        "eqeqeq": 0,
        "operator-linebreak": 0,
        "no-labels": 0,
        "no-inner-declarations": 0,
        "no-undef": 0,
        "standard/no-callback-literal": 0,
        "handle-callback-err": 0,
        "one-var": 0,
        "no-extend-native": 0,
        "no-extra-semi": "error"
    }
}